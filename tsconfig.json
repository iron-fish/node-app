{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target":"ES5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "Components/*": ["src/components/*"],
      "Routes/*": ["src/routes/*"],
      "Svgx/*": ["src/svgx/*"],
      "Utils/*": ["src/utils/*"],
    },
  },
  "include": ["src/**/*"],
}
